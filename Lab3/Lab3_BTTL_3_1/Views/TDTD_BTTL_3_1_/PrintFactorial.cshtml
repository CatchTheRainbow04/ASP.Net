@{
    ViewBag.Title = "PrintFactorial";
}

<h2>Dưới đây là giai thừa của các giá trị từ 1 tới 10</h2>

@{
    int calculateFactorial(int i)
    {
        int n = 1;
        while (i >= 1)
        {
            n *= i;
            i--;
        }
        return n;
    }
}

@{ 
    for(int i = 1; i <=10; i++)
            {
                <h5>--- Giá trị của @i! là @calculateFactorial(i) .</h5>
            }
}