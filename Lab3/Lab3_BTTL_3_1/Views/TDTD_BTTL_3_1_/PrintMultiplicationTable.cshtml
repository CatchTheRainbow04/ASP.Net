@{
    ViewBag.Title = "PrintMultiplicationTable";
}

<h2>Dưới đây là bảng cửu chương từ 2 tới 9</h2>

@{
    for (int i = 2; i <= 9; i++)
    {
        <div style="float: left; margin-right: 35px; border: 2px solid black; padding: 10px;">
            <h3 style="color: red; border-bottom: 1px solid black; padding-bottom: 10px;">Bảng @i</h3>
            @{
                for (int j = 1; j <= 10; j++)
                {
                    int multiplication = i * j;
                    <h5>@i x @j = @multiplication </h5>
                }
            }
        </div>
    }
    <div style="clear: both;"></div>
}