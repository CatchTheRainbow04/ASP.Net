@model IEnumerable<Lab_04._1.Models.Product>

@{
    ViewBag.Title = "ProductList";
}
<style>
    .btn-outline-success:hover a{
        color:white;       
    }
</style>
<h2>ProductList</h2>

<form method="get" action="@Url.Action("ProductList")">
    <input type="text" name="searchTerm" placeholder="Search by name..." value="@Request.QueryString["searchTerm"]" />
    <input type="submit" value="Search" />
</form>
<p>
    @Html.ActionLink("Create New", "ProductCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Unit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Unit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            <button class="btn btn-outline-success">@Html.ActionLink("Edit", "ProductEdit", new { id = item.ProductId })</button>
            <button class="btn btn-outline-success">@Html.ActionLink("Details", "ProductDetail", new { id = item.ProductId })</button>
            <button class="btn btn-outline-success">@Html.ActionLink("Delete", "ProductDelete",  new { id = item.ProductId })</button>
        </td>
    </tr>
}
</table>
